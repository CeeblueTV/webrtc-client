{
    "include": ["./index.ts"],
    "compilerOptions": {
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "target": "ES6", // ES6 by default
        "lib": ["dom", "dom.iterable"], // usefull to make working 'npm build:iife'
        "downlevelIteration": true // usefull to make working 'npm build:iife'
    }
}
